{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./source",
    "rootDir": "./src",
    "removeComments": true,
    "importHelpers": true,
    "importsNotUsedAsValues": "remove",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDirs": ["src"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
